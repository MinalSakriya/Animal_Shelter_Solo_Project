  <h1>Edit Animal</h1>

  <form action="/animalshelter/animal/<%= @animal.id %>" method="post">
    <input type="hidden" name="adoptable" value=<%= @animal.adoptable %>>
    <% if @animal.owner_id != nil %>
      <input type="hidden" name="owner_id" value=<%= @animal.owner_id %>>
    <% end %>
    <p><b>Name:</b> <input type="text" name= "name" value =<%=@animal.name%>></p>

    <p><b>Breed:</b><input type="text" name= "breed" value = <%= @animal.breed %>></p>
    <p><b>Type:</b><input type="text" name= "type" value = <%= @animal.type %>></p>
    <p><b>Adoptable:</b>
        <input type="radio" name="adoptable" value="t"
        <% if @animal.adoptable == "t" %> checked="checked" <% end %>
        <% if @animal.owner_id != nil %> disabled <% end %>>Yes

        <input type="radio" name="adoptable" value="f"
        <% if @animal.adoptable == "f" %> checked="checked" <% end %>
        <% if @animal.owner_id != nil %> disabled <% end %>>No<br>
    </p>
    <p><b>Admission Date:</b><input type="text" name= "admission_date" value = <%= @animal.admission_date %>></p>
    <p><b>Adopted:</b> <% if @animal.owner_id != nil %> Yes <% else %> No <% end %></p>
    <input  type="submit" value="Save">

  </form>

  <form action="/animalshelter/animal/<%= @animal.id %>/delete" method="post">
    <p><input type="submit" value="Delete Animal"></p>
    <a class="button" href="/animalshelter/animals">Back</a>
  </form>
